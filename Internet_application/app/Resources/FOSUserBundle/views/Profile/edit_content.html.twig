{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="form-group row">
    <label for="descriptionTitle" class="col-sm-2 col-form-label">
        Nazwa użytkownika
        <br/>
        <small id="passwordHelpInline" class="text-muted">
            Jeśli chcesz zmienić nazwę użytkownika - wpisz ją tutaj.
        </small>
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.username, {"attr": {"placeholder": "E-Mail"}}) }}
    </div>
</div>

<div class="form-group row">
    <label for="descriptionTitle" class="col-sm-2 col-form-label">
        E-Mail
        <br/>
        <small id="passwordHelpInline" class="text-muted">
            Jeśli chcesz zmienić adres e-mail - Wpisz go tutaj.
        </small>
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.email, {"attr": {"placeholder": "Login"}}) }}
    </div>
</div>
<div class="form-group row">
    <label for="descriptionTitle" class="col-sm-2 col-form-label">
        Obecne hasło
        <br/>
        <small id="passwordHelpInline" class="text-muted">

        </small>
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.current_password, {"attr": {"placeholder": "W celu bezpieczeństwa podaj obecne hasło."}}) }}
    </div>
</div>
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" />
        <a href="{{ url('fos_user_profile_show') }}" class="btn btn-secondary">Powrót</a>
    </div>
{{ form_end(form) }}
