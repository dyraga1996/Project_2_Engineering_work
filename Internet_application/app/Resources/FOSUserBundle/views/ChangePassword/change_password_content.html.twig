{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div class="form-group row">
    <label for="descriptionTitle" class="col-sm-2 col-form-label">
        Obecne Hasło
        <br/>
        <small id="passwordHelpInline" class="text-muted">
            Podaj obecne hasło
        </small>
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.current_password, {"attr": {"placeholder": "Obecne hasło"}}) }}
    </div>
</div>

<div class="form-group row">
    <label for="descriptionTitle" class="col-sm-2 col-form-label">
        Nowe hasło
        <br/>
        <small id="passwordHelpInline" class="text-muted">
            Podaj nowe hasło
        </small>
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.plainPassword.first, {"attr": {"placeholder": "Nowe hasło"}}) }}
    </div>
</div>
<div class="form-group row">
    <label for="descriptionTitle" class="col-sm-2 col-form-label">
        Powtórz hasło
        <br/>
        <small id="passwordHelpInline" class="text-muted">
            Powtórz nowe hasło
        </small>
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.plainPassword.second, {"attr": {"placeholder": "W celu bezpieczeństwa powtórz nowe hasło."}}) }}
    </div>
</div>
<div>
    <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}" />
    <a href="{{ url('fos_user_profile_show') }}" class="btn btn-secondary">Powrót</a>
</div>
{{ form_end(form) }}
